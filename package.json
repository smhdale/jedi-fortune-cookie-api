{
  "name": "jedi-fortune-cookie-api",
  "version": "0.0.1",
  "description": "A simple REST API for the Jedi fortune cookie messages found in each episode of Star Wars: The Clone Wars.",
  "main": "dist/app.js",
  "types": "types/index.d.ts",
  "scripts": {
    "dev": "tsc-watch --onSuccess \"node dist/app.js\"",
    "build": "rm -rf ./dist && tsc",
    "serve": "node dist/app.js",
    "lint": "prettier --write ./src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smhdale/jedi-fortune-cookie-api.git"
  },
  "keywords": [
    "star wars",
    "clone wars",
    "rest",
    "api",
    "typescript",
    "koa"
  ],
  "author": "Samuel Dale",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/smhdale/jedi-fortune-cookie-api/issues"
  },
  "homepage": "https://github.com/smhdale/jedi-fortune-cookie-api#readme",
  "dependencies": {
    "@types/koa-logger": "^3.1.1",
    "koa": "^2.13.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.4.0",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "@types/koa": "^2.11.4",
    "@types/koa-router": "^7.4.1",
    "@types/nedb": "^1.8.11",
    "@types/node": "^14.11.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
